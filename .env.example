# AgentWall Configuration
# Copy this file to .env and fill in your values
# Domain: agentwall.io

# ============================================
# APPLICATION
# ============================================
APP_NAME=AgentWall
APP_VERSION=0.1.0
DEBUG=true

# ============================================
# SERVER
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# OPENAI
# ============================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_BASE_URL=https://api.openai.com
OPENAI_TIMEOUT=120

# ============================================
# MULTI-PROVIDER SUPPORT
# ============================================

# OpenRouter - 100+ Models (Claude, Gemini, Llama, etc.)
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api

# Groq - Ultra Fast Inference (LPU)
# Get key: https://console.groq.com/keys
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai

# DeepSeek - Cheapest Option
# Get key: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Mistral AI - European Provider
# Get key: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=
MISTRAL_BASE_URL=https://api.mistral.ai

# Ollama - Local Development (no API key needed)
OLLAMA_BASE_URL=http://localhost:11434

# Alibaba Qwen - Global Access
# Get key: https://dashscope.console.aliyun.com/
QWEN_API_KEY=
QWEN_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode

# Provider routing: openai, openrouter, groq, deepseek, mistral, ollama, auto
# auto = route based on model name (recommended)
DEFAULT_PROVIDER=auto

# ============================================
# CLICKHOUSE (Time-series Logs)
# ============================================
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=agentwall

# ============================================
# REDIS (Rate Limiting & Caching)
# ============================================
REDIS_URL=redis://redis:6379
REDIS_MAX_CONNECTIONS=50

# ============================================
# LARAVEL INTEGRATION
# ============================================
LARAVEL_URL=http://laravel:8080
INTERNAL_SECRET=agentwall-internal-2026-secure-key

# ============================================
# AGENT FIREWALL SETTINGS
# ============================================
MAX_STEPS=30
MAX_TOOL_CALLS=10
TIMEOUT_SECONDS=120

# ============================================
# LOOP DETECTION
# ============================================
SIMILARITY_THRESHOLD=0.95
SIMILARITY_MODEL=all-MiniLM-L6-v2

# ============================================
# DLP (Data Loss Prevention)
# ============================================
DLP_MODE=mask
DLP_ENABLED=true

# ============================================
# PERFORMANCE
# ============================================
LOG_BATCH_SIZE=100
LOG_FLUSH_INTERVAL=5.0

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090
